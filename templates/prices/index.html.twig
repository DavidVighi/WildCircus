{% extends 'base.html.twig' %}

{% block title %}Prices index{% endblock %}

{% block body %}
    <h1>Prices index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Days</th>
                <th>Adultprices</th>
                <th>Kidsprice</th>
                <th>Groups</th>
                <th>School</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for price in prices %}
            <tr>
                <td>{{ price.id }}</td>
                <td>{{ price.days }}</td>
                <td>{{ price.adultprices }}</td>
                <td>{{ price.kidsprice }}</td>
                <td>{{ price.groups }}</td>
                <td>{{ price.school }}</td>
                <td>
                    <a href="{{ path('prices_show', {'id': price.id}) }}">show</a>
                    <a href="{{ path('prices_edit', {'id': price.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prices_new') }}">Create new</a>
{% endblock %}
